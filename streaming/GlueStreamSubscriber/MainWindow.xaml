<Window x:Class="GlueStreamSubscriber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlueStreamSubscriber"
        mc:Ignorable="d"
        Title="Glue Stream SUBSCRIBER Demo - GlueDemoTickStream" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListView Name="Subscriptions" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2, 2, 2, 2"/>
        <GridSplitter ResizeDirection="Rows" Width="Auto" Height="3" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <ListView Name="Log" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2, 2, 2, 2"/>
    </Grid>
</Window>
